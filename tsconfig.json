{
	"include": ["./src"],
	"compilerOptions": {
		"rootDir": "./src",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
	}
}
