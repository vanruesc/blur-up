{
	"include": ["./*.js", "./src", "./test"],
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ESNext",
		"strict": true,
		"allowJs": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"allowSyntheticDefaultImports": true
	}
}
